{% extends 'layout.html.twig' %}
{% trans_default_domain 'profesor' %}
{% block content %}
    {{ form_start(formulario) }}
    {{ form_widget(formulario) }}

    <div clas="form-grupo">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <button type="submit" name="enviar" class="btn btn-success btn">
                <i class="fa fa-check"></i> {{ 'form.guardar'|trans }}
            </button>
            <button type="submit" name="eliminar" class="btn btn-danger btn">
                <i class="fa fa-trash"></i> Eliminar
            </button>
        </div>
    </div>
    {{ form_end(formulario) }}
{% endblock %}
