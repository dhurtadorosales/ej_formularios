{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Listado de grupos</h1>
    <table class="table table-bordered table-responsive table-striped table-hover">
        <thead>
        <tr>
            <th class="col-md-2">Grupo</th>
            <th class="col-md-2">Aula</th>
            <th class="col-sm-2">NÂº de alumnos</th>
            <th class="col-sm-6">Tutor del grupo</th>
            <th class="col-sm-6"></th>
        </tr>
        </thead>
        <tbody>
            {% for grupo in grupos %}
                <tr>
                    <td><input type="checkbox" name="pepito[]" value="{{ grupo[0].id }}">{{ grupo[0].descripcion }}</td>
                    <td>{{ grupo[0].aula }}</td>
                    <td>{{ grupo[1] }}</td>
                    <td>{{ grupo[0].tutor }}</td>
                    <td>
                        <a href="{{ path('modificar_grupo', {'descripcion': grupo[0].descripcion}) }}" class="btn btn-xs btn-info" title="Modificar"><i class="fa fa-pencil"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
