{% extends 'layout.html.twig' %}

{% block content %}
    <h1 class="well well-sm">
        {% if alumno.id %}
            Modificar alumno {{ alumno.apellidos }}, {{ alumno.nombre }}
        {% else %}
            Nuevo alumno
        {% endif %}
    </h1>

    {{ form_start(formulario) }}
    {{ form_widget(formulario) }}

    <div clas="form-grupo">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <button type="submit" name="enviar" class="btn btn-success btn"><i class="fa fa-check"></i> Guardar los camios</button>
            <button type="submit" name="eliminar" class="btn btn-danger btn"><i class="fa fa-trash"></i> Eliminar</button>
        </div>
    </div>
    {{ form_end(formulario) }}

{% endblock %}
